<article class="page-content">
  <div class="row">
    <div class="large-centered large-12 columns">
      <header>
        <h1>Cohorts</h1>
      </header>
      <% if notice %>
        <div data-alert class="alert-box info">
          <%= notice %>
          <a href="#" class="close">&times;</a>
        </div>
      <% end %>
      <div class="row">
        <section class="medium-5 columns">
          <h2 class="hide">All cohorts</h2>
          <% if @cohorts.empty? %>
            <div class="alert-box secondary">
              There are currently no cohorts in the system.
            </div>
          <% else %>
            <% @cohorts.each do |cohort| %>
              <div class="item">
                <div class="item-name"><%= cohort.name %></div>
                <div class="item-details">
                  <%= cohort.compass_install %> / <%= cohort.compass_primary_key %>
                  <%= link_to 'delete', cohort, method: :delete, class: 'right', data: {confirm: "Are you sure you want to delete #{cohort_name(cohort)}?"} %>
                </div>
              </div>
            <% end %>
          <% end %>
        </section>
        <aside class="medium-7 columns">
          <div class="panel">
            <h3>Add a cohort</h3>
            <%= form_for @cohort do |f| %>
              <% if @cohort.errors.any? %>
                <div class="panel callout">
                  <p><%= pluralize(@cohort.errors.count, 'error') %> prohibited this user from being saved:</p>
                  <ul>
                    <% @cohort.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="row">
                <div class="small-4 columns">
                  <%= f.label :name, class: 'right inline' %>
                </div>
                <div class="small-8 columns">
                  <%= f.text_field :name %>
                </div>
              </div>
              <div class="row">
                <div class="small-4 columns">
                  <%= f.label :compass_install, class: 'right inline' %>
                </div>
                <div class="small-8 columns">
                  <%= f.text_field :compass_install %>
                </div>
              </div>
              <div class="row">
                <div class="small-4 columns">
                  <%= f.label :compass_primary_key, class: 'right inline' %>
                </div>
                <div class="small-8 columns">
                  <%= f.text_field :compass_primary_key %>
                </div>
              </div>
              <div class="actions">
                <%= f.submit class: 'button' %>
              </div>
            <% end %>
          </div>
        </aside>
      </div>
    </div>
  </div>
</article>
